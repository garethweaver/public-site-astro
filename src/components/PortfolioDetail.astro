---
// export interface Props {
//  title: string
//  body: string
//  foo: string
// }
const { title, body, type, tools, year, images } = Astro.props
---

<div class="PortfolioDetail">
  <div class="inner">
    <h1>{title}</h1>
    <ul>
      <li>{type}</li>
      <li>{tools}</li>
      <li>{year}</li>
    </ul>
    <div
      class="body"
      set:html={body} />
      {images.map(image => (
        <picture>
          {image.mobile && (
            <source
              srcset={image.mobile.url}
              media="(max-width: 576px)"
              height={image.mobile.height}
              width={image.mobile.width} />
          )}
          <img
            loading="lazy"
            src={image.url}
            alt={image.alt}
            height={image.height}
            width={image.width} />
        </picture>
      ))}
  </div>
</div>

<style lang="sass">
  @import'../style/base'

  .PortfolioDetail
    background: $color-fg
    max-width: $max-width
    margin: 0 auto
    padding: 2em 1em
    border-radius: 0.5em
    +media-up(md)
      padding: 2em

  .inner
    margin: 0 auto
    max-width: $max-content-width
    +media-up(md)
      padding-top: 6rem

  ul
    list-style: none
    padding: 0
    color: $color-href
    font-family: $font-family-heading
    +media-up(md)
      display: flex

  li
    border-left: 1px solid white
    padding-left: 1rem
    +media-up(md)
      border-left: none
      border-left: 1px solid rgba(white, 0.3)
      padding: 0.5em 1em 0.5em 1em
      &:first-child
        padding-left: 0
        border-left: none

  .body
    line-height: 1.5

  picture
    display: block
    margin-top: 2em

  img
    width: 100%
    border-radius: 0.5em
    box-shadow: 0 0 0 1px rgba(white, 0.08)
    height: auto
    background: darken($color-bg, 2%)
</style>
