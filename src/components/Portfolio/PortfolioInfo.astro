---
const { info } = Astro.props

export interface Props {
  info: string[]
}
---

<ul>
  {info.map(item => (
    <li>
      <span set:html={item} />
    </li>
  ))}
</ul>


<style lang="sass">
  @import '../../style/base'

  ul
    list-style: none
    padding: 0
    font-family: var(--font-family-heading)
    margin: 1em 0 2em
    line-height: 1.7
    +media-up(md)
      display: flex
      margin: 1em 0 3em
    +media-up(lg)
      font-size: 0.85em

  li
    margin: 0.1em 0 0
    &:first-child
      margin: 0

    +media-up(md)
      margin: 0 0 0 0.5em
      &:first-child
        margin: 0
  span
    background: var(--gradient)
    padding: 0.25em
    border-radius: 3px
</style>
