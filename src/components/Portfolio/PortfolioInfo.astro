---
const { info } = Astro.props
---

<ul>
  {info.map(item => <li set:html={item} />)}
</ul>


<style lang="sass">
  @import '../../style/base'

  ul
    list-style: none
    padding: 0
    color: $color-href
    font-family: $font-family-heading
    margin: 0.5em 0 2em
    +media-up(md)
      display: flex
      font-size: 0.85em

  li
    border-left: 1px solid white
    padding-left: 1rem
    +media-up(md)
      border-left: none
      border-left: 1px solid rgba(white, 0.3)
      padding: 0.5em 1em 0.5em 1em
      &:first-child
        padding-left: 0
        border-left: none
</style>
