---
import Layout from '@layouts/Layout.astro'
import PortolioDetail from '@components/Portfolio/PortfolioDetail.astro'

export async function getStaticPaths() {
  const items = await Astro.glob('../../content/portfolio/*.md')

  return items.map(item => {
    return {
      params: { slug: item.frontmatter.slug },
      props: { ...item.frontmatter, body: item.compiledContent() },
    }
  })
}
---

<Layout title="Portfolio">
  <PortolioDetail {...Astro.props} />
</Layout>
