---
import Layout from '@layouts/Layout.astro'
import ScrollButton from '@components/ScrollButton/ScrollButton.astro'
import PortfolioList from '@components/Portfolio/PortfolioList.astro'
---

<Layout
  title="Gareth Weaver - Frontend Engineer"
  description="I'm a frontend engineer with over a decade of experience. I'm always happy to have a chat about websites, webapps, technology or rugby.">
  <div class="intro">
    <div class="inner">
      <h1>
        PWAs &amp;<br />Engineering
      </h1>
      <h2 class="subtitle">
        Let’s talk about websites, webapps, rugby or just the weather.
        I’m a lead frontend engineer from London living in Brisbane, Australia.
      </h2>
      <ScrollButton />
    </div>
    <div class="desk">
      <img
        fetchpriority="high"
        class="me"
        alt="Pixel art of Gareth sat at a desk with a laptop viewed from above"
        src="/desk-3.min.svg" />
    </div>
  </div>
  <div id="portfolio-anchor" />
  <PortfolioList />
</Layout>

<style lang="sass">
  @import'../style/base'

  .intro
    max-width: var(--max-width)
    margin: 0 auto
    background: var(--gradient)
    min-height: 80vh
    border-radius: 0.5em
    position: relative
    overflow: hidden
    +media-up(md)
      min-height: 85vh
    +media-up(xxl)
      min-height: 42.5em

  .inner
    max-width: 440px
    padding: 2rem
    position: relative
    z-index: 1
    +media-up(md)
      padding: 5rem 2rem 0
    +media-up(lg)
      margin-left: 8vw
      padding-top: 15vh
    +media-up(xxl)
      margin-left: 10%
      padding-top: 15%

  .subtitle
    line-height: 1.3
    font-family: var(--font-family-body)
    font-size: 1em
    font-weight: 400
    margin-bottom: 1.2em

  .desk
    position: absolute
    top: 80%
    left: -200px
    right: -200px
    transform: rotate(-15deg)
    height: 50%

    &:before
      content: ''
      background: rgba(0, 0, 0, 0.3)
      position: absolute
      height: 100%
      width: 100%
      mix-blend-mode: overlay
  .me
    position: absolute
    top: 0
    left: 60%
    width: 400px
    transform: translate(-50%, -221px)
    +media-up(sm)
      width: 450px
      transform: translate(-50%, -249.5px)
    +media-up(md)
      left: 69%
      width: 610px
      transform: translate(-50%, -337.5px)

  // offset for fixed desktop nav
  #portfolio-anchor
    +media-up(md)
      position: relative
      top: -26px
</style>
