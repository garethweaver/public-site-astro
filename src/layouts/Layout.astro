---
import 'normalize.css'
import NavBar from '@components/NavBar.astro'
import PortfolioList from '@components/PortfolioList.astro'
import Footer from '@components/Footer.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <PortfolioList />
    <Footer />
  </body>
</html>

<style lang="sass" is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;800&family=Ubuntu:wght@300&display=swap')
  @import'../style/base'

  *
    box-sizing: border-box

  html
    font-size: 16px
    +media-up(md)
      font-size: 18px
    +media-up(lg)
      font-size: 22px

  *::selection
    background: rgba(#E8EE00, 0.9)
    color: black

  body
    background: $color-bg
    color: #ffffff
    font-family: $font-family-body
    font-weight: 300

  h1, h2, h3, h4, h5, h6
    font-family: $font-family-heading
    font-weight: 800

  a
    color: $color-href
</style>
