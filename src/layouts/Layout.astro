---
import 'normalize.css'
import Header from '@components/Header/Header.astro'
import PortfolioList from '@components/Portfolio/PortfolioList.astro'
import Modal from '@components/Modal/Modal.jsx'
import Footer from '@components/Footer/Footer.astro'

export interface Props {
  title: string,
  description: number,
}

const { title, description } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="Content-Security-Policy" content="script-src 'self' 'unsafe-inline'" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <PortfolioList />
    </main>
    <Footer />
    <Modal client:idle />
  </body>
</html>

<style lang="sass" is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;800&family=Ubuntu:wght@300&display=swap')
  @import'../style/base'

  *
    box-sizing: border-box

  html
    font-size: 18px
    +media-up(lg)
      font-size: 22px

  *::selection
    background: rgba($color-highlight, 0.9)
    color: black

  body
    background: $color-bg
    color: #ffffff
    font-family: $font-family-body
    font-weight: 300
    padding: 0 1em
    +media-up(md)
      padding: 0 2em

  main
    +media-up(md)
      padding-top: 2em

  h1, h2, h3, h4, h5, h6
    font-family: $font-family-heading
    font-weight: 800

  a
    color: $color-href
    font-family: $font-family-heading
    text-decoration: none
</style>
